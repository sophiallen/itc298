{{! Optional div to display feedback, if user has tried to update the language detail entry.}}
{{#if changes}}
<div id="changes" style="background-color:{{{changes.color}}}" >{{changes.msg}}</div>
{{/if}}
<h1>Language Detail: {{{title}}}</h1>
<ul>
	<li>Translation Engine: {{{language.engine}}}</li>
	<li>Current Users: {{{language.users}}}</li>
</ul>
<form name="delete_lang" action="delete/{{{language.name}}}" method="post">
	<legend>Delete This Language</legend>
	<label><em>You will be redirected to the home page.</em></label>
	<input type="submit" value="delete"/>
</form>
<form name="update_lang" action="update/{{{language.name}}}" method="post">
	<legend>Update Language</legend>
	<label>Updated name:</label>
	<input type="text" name="new_name"/>
	<label>Updated engine </label>
	<input type="text" name="new_engine"/>
	<label>Updated Number of Users</label>
	<input type="text" name="new_userNum"/>
	<input type="submit" value="update!"/>
</form>
